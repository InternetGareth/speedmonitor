# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=speedmonitor-admin-token
INFLUXDB_ORG=speedmonitor
INFLUXDB_BUCKET=speedtest

# Speed Test Configuration
TEST_INTERVAL_MINUTES=60
# Leave SPEEDTEST_SERVER_ID empty to auto-select best server (recommended)
# Or specify a server ID from: speedtest-cli --list
SPEEDTEST_SERVER_ID=

# Logging
LOG_LEVEL=INFO

# InfluxDB Admin Setup (for initial setup)
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=speedmonitor-admin
DOCKER_INFLUXDB_INIT_ORG=speedmonitor
DOCKER_INFLUXDB_INIT_BUCKET=speedtest
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=speedmonitor-admin-token

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=speedmonitor-grafana